@using Microsoft.AspNetCore.Mvc.Rendering
@model ProductSheetViewModel

@{  var imagePath= Model.ImageUrl;
    
}

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Open Food Facts</title>
</head>
<body>
<div>
    <div>
        @Html.DisplayFor(model => model.ProductName)
    </div>
    <div>
        <img src="@imagePath"/>
    </div>
    <div>
        <form asp-action="SaveProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BarCode" class="control-label"></label>
                <input asp-for="BarCode" class="form-control" name="barcode" />
                <span asp-validation-for="BarCode" class="text-danger"></span>
                
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" name="productname" />
                <span asp-validation-for="ProductName" class="text-danger"></span>

               
                <div>
                    Marque :
                    @Html.DisplayFor(model => model.Brand)
                </div>
                <div>
                    Catégories :
                    @Html.DisplayFor(model => model.Categories)
                </div>

                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" name="price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div>
                <select asp-for ="ShopId"
                        asp-items="@(new SelectList(ViewBag.ShopList, "ShopId", "ShopName"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Product" class="btn btn-default"/>
            </div>
        </form>
    </div>

</div>
<h2 style="font-style:italic; color:deeppink">@ViewBag.Result</h2>
</body>
</html>